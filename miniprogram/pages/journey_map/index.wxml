<view class="page full-screen">
  <map id="JourneyMap" style="width: 100%; height: 100vh;" bindtap="tapMap" bindmarkertap="markerTap" bindcallouttap="calloutTap" markers="{{markers}}" include-points>
    <cover-view class="add-marker">
      <cover-image wx:if="{{!addMarker}}" src="../../assets/image/add.png" bindtap="tapAddMarker"></cover-image>
      <cover-image wx:else src="../../assets/image/add-chosen.png" bindtap="tapAddMarker"></cover-image>
    </cover-view>
    <cover-view class="remove-marker">
      <cover-image wx:if="{{!removeMarker}}" src="../../assets/image/shanchu.png" bindtap="tapRemoveMarker"></cover-image>
      <cover-image wx:else src="../../assets/image/shanchu-chosen.png" bindtap="tapRemoveMarker"></cover-image>
    </cover-view>
  </map>
</view>
